@page
@using Sbeap.WebApp.Pages.Shared.EditorTemplates
@model EditModel
@{
    ViewData["Title"] = "Edit Your Profile";
    ViewData["NoAnchors"] = true;
}

<h1>@ViewData["Title"]</h1>
<hr />

<h2>@Model.DisplayStaff.Name</h2>

<div class="p-3 border rounded-3 bg-light mb-3">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert">
            Update failed:
        </div>
        <div class="row">
            <div class="col-lg mb-3">
                @Html.EditorFor(e => e.DisplayStaff.Email, EditorTemplate.InputFloatingDisabled)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.UpdateStaff.Phone, EditorTemplate.InputFloating)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.UpdateStaff.OfficeId, EditorTemplate.SelectFloating, new { Items = Model.OfficeItems })
            </div>
        </div>
        <div class="mt-3">
            <input asp-for="UpdateStaff.Id" type="hidden" />
            <input asp-for="UpdateStaff.Active" type="hidden" />
            <button type="submit" class="btn btn-primary col-sm-3 me-2">Update Info</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
        <div class="text-danger mt-3">* denotes a required field</div>
    </form>
</div>
