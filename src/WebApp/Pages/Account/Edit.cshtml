@page
@using Sbeap.WebApp.Pages.Shared.EditorTemplates
@model EditModel
@{
    ViewData["Title"] = "Edit Your Profile";
    ViewData["NoAnchors"] = "True";
}

<h1>@ViewData["Title"]</h1>
<hr />

<h2>@Model.DisplayStaff.Name</h2>

<div class="p-3 border rounded-3 bg-light-subtle mb-3">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger d-flex align-items-center" role="alert">
            <svg class="bi me-2" role="img" aria-label="Danger:">
                <use href="@Url.Content("~/images/app-icons.svg")#app-icon-exclamation-triangle-fill"></use>
            </svg>
            <div>Update failed:</div>
        </div>
        <div class="row">
            <div class="col-lg mb-3">
                @Html.EditorFor(e => e.DisplayStaff.Email, EditorTemplate.InputDisabled)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.UpdateStaff.Phone, EditorTemplate.Input)
            </div>
            <div class="col-md mb-3">
                @Html.EditorFor(e => e.UpdateStaff.OfficeId, EditorTemplate.Select, new { Items = Model.OfficeItems })
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary col-sm-3 me-2">Update Info</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
        <div class="text-danger-emphasis mt-3">* denotes a required field</div>
    </form>
</div>
