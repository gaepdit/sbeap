@page "~/Customers/DeleteContact/{id:guid?}"
@using Sbeap.WebApp.Pages.Shared.DisplayTemplates
@model DeleteContactModel

@{
    ViewData["Title"] = "Delete Contact";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em>
    @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark text-light">
    <p class="lead text-danger font-weight-medium">
        Are you sure you want to delete this Contact?<br>
        <em>This cannot be undone.</em>
    </p>

    <div class="container small">
        <dl class="row">
            <dt class="col-md-4 col-lg-3">Contact Name</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ContactView.Name, DisplayTemplate.StringOrNotEntered)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ContactView.Title)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ContactView.Title, DisplayTemplate.StringOrNotEntered)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ContactView.Email)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ContactView.Email, DisplayTemplate.StringOrNotEntered)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ContactView.Address)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ContactView.Address, DisplayTemplate.IncompleteAddressOneLine)</dd>
        </dl>
    </div>
    <hr>
    <div class="container small">
        <dl class="row">
            <dt class="col-md-4 col-lg-3">For Customer</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.CustomerView.Name, DisplayTemplate.StringOrNotEntered)</dd>
            <dt class="col-md-4 col-lg-3">Customer Description</dt>
            <dd class="col-md-8 col-lg-9 text-break text-pre-line">@Html.DisplayFor(m => m.CustomerView.Description, DisplayTemplate.TruncateText, new { MaxLength = 200 })</dd>
        </dl>
    </div>

    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Delete</button>
            <a asp-page="Details" asp-route-id="@Model.CustomerView.Id" asp-fragment="contacts" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="ContactId" type="hidden" />
    </form>
</div>
