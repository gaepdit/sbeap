@page "~/Cases/DeleteAction/{actionId:guid?}"
@using Sbeap.WebApp.Pages.Shared.DisplayTemplates
@model DeleteActionModel

@{
    ViewData["Title"] = "Delete Action Item";
    ViewData["NoAnchors"] = "True";
}

<h1>
    <em>Confirm</em>
    @ViewData["Title"]
</h1>

<div class="p-3 border rounded-3 bg-dark-subtle text-dark-emphasis">
    <p class="lead text-danger-emphasis font-weight-medium">
        Are you sure you want to delete this Action?<br>
        <em>This cannot be undone.</em>
    </p>

    <div class="container small">
        <dl class="row">
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ActionItemView.ActionItemTypeName)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ActionItemView.ActionItemTypeName)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ActionItemView.ActionDate)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ActionItemView.ActionDate, DisplayTemplate.DateOnly)</dd>
            <dt class="col-md-4 col-lg-3">@Html.DisplayNameFor(m => m.ActionItemView.Notes)</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.ActionItemView.Notes, DisplayTemplate.TruncateText)</dd>
        </dl>
    </div>
    <hr>
    <div class="container small">
        <dl class="row">
            <dt class="col-md-4 col-lg-3">For Customer</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.CaseView.Customer.Name, DisplayTemplate.StringOrNotEntered)</dd>
            <dt class="col-md-4 col-lg-3">Case Description</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.CaseView.Description, DisplayTemplate.TruncateText)</dd>
            <dt class="col-md-4 col-lg-3">Date Case Opened</dt>
            <dd class="col-md-8 col-lg-9">@Html.DisplayFor(m => m.CaseView.CaseOpenedDate, DisplayTemplate.DateOnly)</dd>
        </dl>
    </div>

    <form method="post">
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-danger col-5 col-sm-3 col-lg-2 me-2">Delete</button>
            <a asp-page="Details" asp-route-id="@Model.CaseView.Id.ToString()" asp-fragment="actions" class="btn btn-outline-secondary">Cancel</a>
        </div>
        <input asp-for="ActionItemId" type="hidden" />
    </form>
</div>
