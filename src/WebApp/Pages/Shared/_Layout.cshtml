@using Sbeap.WebApp.Platform.PageModelHelpers
@{
    var displayMessage = TempData.GetDisplayMessage();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SBEAP</title>
    <partial name="_FaviconPartial" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <partial name="_RaygunScriptsPartial" />
    <script src="~/js/color-modes.js"></script>
</head>

<body id="top">
<header role="banner" class="sticky-top">
    <environment exclude="Production">
        <div class="banner-test-site">Test Site</div>
    </environment>
    <a class="skip-nav shadow border border-2 rounded border-info bg-info-subtle text-info-emphasis" href="#main-content">Skip to main content</a>
    <partial name="_MenuPartial" />
</header>

<div class="container">
    <main id="main-content" role="main" class="pb-3">
        <partial name="_AlertPartial" for="@displayMessage" />
        @RenderBody()
    </main>
</div>

<footer class="footer bg-body-secondary">
    <div class="bg-body-tertiary d-print-none border-bottom border-top">
        <div class="container">
            <a href="#top">â†‘ Return to top</a>
        </div>
    </div>
    <div class="container">
        &copy; @DateTime.Now.Year.ToString() State of Georgia
        <span class="d-print-none">
            | <a href="https://georgia.gov/accessibility" target="_blank" rel="noopener">Accessibility</a>
            | <a href="https://gadnr.org/ada" target="_blank" rel="noopener">DNR Accessibility Notice</a>
            | <a href="https://georgia.gov/privacysecurity" target="_blank" rel="noopener">Privacy/Security</a>
        </span>
    </div>
</footer>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
@if (!ViewData.ContainsKey("NoAnchors"))
{
    <script src="~/lib/anchor-js/anchor.min.js"></script>
    <script src="~/js/anchorInit.js"></script>
}
@await RenderSectionAsync("Scripts", false)
</body>
</html>
