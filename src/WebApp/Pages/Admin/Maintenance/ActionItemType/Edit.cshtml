@page "{id:Guid?}"
@using Sbeap.WebApp.Pages.Shared.EditorTemplates
@model EditModel

@{
    ViewData["Title"] = $"Edit {EditModel.ThisOption.SingularName}";
    ViewData["NoAnchors"] = true;
}

<h1>Edit @EditModel.ThisOption.SingularName</h1>
<hr />

<h2>@Model.OriginalName</h2>

<div class="p-3 border rounded-3 bg-light">
    <form method="post">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        <div class="mb-3">
            @Html.EditorFor(e => e.Item.Name, EditorTemplate.Input)
        </div>
        <div class="mb-3">
            @Html.EditorFor(e => e.Item.Active, EditorTemplate.Checkbox)
        </div>
        <div class="mt-3 mb-1">
            <button type="submit" class="btn btn-primary col-sm-3 me-2">Save Changes</button>
            <a asp-page="Index" class="btn btn-outline-secondary col-md-2">Cancel</a>
        </div>
        <div class="text-danger mt-3">* denotes a required field</div>
        <input asp-for="Item.Id" type="hidden" />
        <input asp-for="OriginalName" type="hidden" />
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
